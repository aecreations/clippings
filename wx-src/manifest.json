{
    "manifest_version": 2,
    "name": "__MSG_extName__",
    "description": "__MSG_extDesc__",
    "version": "6.3beta1+",
    "homepage_url": "https://aecreations.sourceforge.io/clippings/index.php",
    "author": "AE Creations",
    
    "browser_specific_settings": {
	"gecko": {
            "id": "{91aa5abe-9de4-4347-b7b5-322c38dd9271}",
	    "strict_min_version": "78.0"
	}
    },

    "icons": {
        "48": "img/icon.svg",
        "96": "img/icon.svg"
    },

    "permissions": [
        "alarms",
	"contextMenus",
	"downloads",
	"history",
        "nativeMessaging",
        "notifications",
	"storage",
	"tabs",
	"unlimitedStorage"
    ],
    
    "background": {
	"scripts": [
	    "lib/dexie/dexie.min.js",
	    "lib/moment.min.js",
	    "scripts/aeConst.js",
	    "scripts/aeClippingSubst.js",
            "scripts/aeImportExport.js",
            "scripts/aeDateDiff.js",
            "scripts/aePrefs.js",
            "background.js"
	]
    },
    
    "content_scripts": [
	{
	    "matches": ["<all_urls>"],
	    "all_frames": true,
	    "js": ["content.js"]
	}
    ],

    "browser_action": {
	"default_icon": {
	    "16": "img/clippings16.svg",
            "32": "img/clippings32.svg"
	},

	"default_area": "navbar",
        "default_title": "__MSG_browserActionTitle__",
        "browser_style": false
    },

    "commands" : {
	"ae-clippings-paste-clipping": {
	    "suggested_key": {
		"default": "Alt+Shift+Y",
		"mac": "Command+Shift+Y"
	    },
	    "description": "__MSG_cmdDesc__"
	}
    },

    "options_ui": {
        "page": "pages/options.html",
        "open_in_tab": true,
        "browser_style": true
    },

    "default_locale": "en"
}
