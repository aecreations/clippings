{
    "manifest_version": 2,
    "name": "Clippings/wx",
    "description": "Save frequently-entered text for pasting later.",
    "version": "6.0a1-pre",
    "homepage_url": "http://aecreations.sourceforge.net/clippings/index.php",
    
    "applications": {
	"gecko": {
	    "strict_min_version": "54.0"
	}
    },

    "icons": {
        "48": "img/clippings-wx.png"
    },

    "permissions": ["contextMenus", "storage", "history", "tabs"],
    
    "background": {
	"scripts": [
	    "lib/dexie/dexie.js",
	    "lib/dexie/dexie-observable.js",
	    "modules/aeMsgBox.js",
	    "modules/aeClippingSubst.js",
	    "background.js"
	]
    },
    
    "content_scripts": [
	{
	    "matches": ["<all_urls>"],
	    "all_frames": true,
	    "js": ["content.js"]
	}
    ],

    "browser_action": {
	"default_icon": {
	    "48": "img/clippings-wx.png"
	},

	"default_area": "navbar",

	"default_title": "Organize Clippings"
    },

    "commands" : {
	"ae-clippings-paste-clipping": {
	    "suggested_key": {
		"default": "Ctrl+Shift+Y"
	    },
	    "description": "Paste a clipping using its shortcut key"
	}
    }
}
