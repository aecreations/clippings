{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "6.99.1",
  "homepage_url": "https://aecreations.io/clippings/index.php",
  "author": "AE Creations",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "{91aa5abe-9de4-4347-b7b5-322c38dd9271}",
      "strict_min_version": "128.0",
      "update_url": "https://aecreations.github.io/updates/update-test.json"
    }
  },

  "icons": {
    "16": "img/clippings16.svg",
    "32": "img/icon32.svg",
    "48": "img/icon.svg",
    "96": "img/icon.svg"
  },

  "permissions": [
    "alarms",
    "menus",
    "downloads",
    "notifications",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],

  "optional_permissions": [
    "clipboardRead",
    "clipboardWrite",
    "nativeMessaging"
  ],

  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "scripts": [
      "lib/dexie/dexie.min.js",
      "lib/moment/moment.min.js",
      "lib/moment/locales.min.js",
      "lib/jquery.js",
      "scripts/aeConst.js",
      "scripts/aeClippingSubst.js",
      "scripts/aeImportExport.js",
      "scripts/aeDateDiff.js",
      "scripts/aePrefs.js",
      "scripts/aeVersionCmp.js",
      "scripts/aeUUID.js",
      "scripts/aeClippings.js",
      "scripts/aeCompress.js",
      "background.js"
    ]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": [
	"lib/purify.min.js",
	"content.js"
      ]
    }
  ],

  "action": {
    "default_icon": {
      "16": "img/clippings16.svg",
      "32": "img/clippings32.svg"
    },
    "default_area": "navbar",
    "default_title": "__MSG_browserActionTitle__"
  },

  "sidebar_action": {
    "default_icon": "img/clippings16.svg",
    "default_title": "__MSG_browserActionTitle__",
    "default_panel": "pages/sidebar.html",
    "open_at_install": false
  },

  "commands" : {
    "ae-clippings-paste-clipping": {
      "suggested_key": {
        "default": "Alt+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "__MSG_cmdDesc__"
    }
  },

  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": true
  },

  "default_locale": "en"
}
