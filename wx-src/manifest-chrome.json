{
    "manifest_version": 2,
    "name": "Clippings/wx",
    "description": "Save frequently-entered text for pasting later.",
    "version": "5.99.1",
    "version_name": "6.0pre1+",

    "background": {
	"scripts": ["dexie.js", "background.js"]
    },
    "content_scripts": [
	{
	    "matches": ["<all_urls>"],
	    "all_frames": true,
	    "js": ["content.js"]
	}
    ],
    
    "permissions": ["contextMenus", "storage", "unlimitedStorage"],
      
    "icons": {
        "48": "icons/clippings-wx.png"
    }
}
