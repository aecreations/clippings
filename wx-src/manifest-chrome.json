{
    "manifest_version": 2,
    "name": "Clippings/wx",
    "description": "Save frequently-entered text for pasting later.",
    "version": "5.99.3",
    "version_name": "6.0pre3",
    "homepage_url": "http://aecreations.sourceforge.net/clippings/index.php",
    
    "icons": {
        "48": "img/clippings-wx.png"
    },

    "permissions": ["contextMenus", "storage", "unlimitedStorage", "history"],
      
    "background": {
	"scripts": [
	    "lib/dexie/dexie.js",
	    "lib/dexie/dexie-observable.js",
	    "modules/aeMsgBox.js",
	    "background.js"
	]
    },

    "content_scripts": [
	{
	    "matches": ["<all_urls>"],
	    "all_frames": true,
	    "js": ["content.js"]
	}
    ],

    "browser_action": {
	"default_icon": {
	    "48": "img/clippings-wx.png"
	},

	"default_title": "Organize Clippings"
    }
}
