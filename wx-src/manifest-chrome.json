{
    "manifest_version": 2,
    "name": "Clippings",
    "description": "Save frequently-entered text for pasting later.",
    "version": "6.0.1.1",
    "version_name": "6.0.1.1+",
    "homepage_url": "http://aecreations.sourceforge.net/clippings/index.php",
    "author": "AE Creations",
  
    "icons": {
        "48": "img/icon.svg",
        "96": "img/icon.svg"
    },

    "permissions": [
	"contextMenus",
	"downloads",
	"history",
	"storage",
	"tabs"
	"unlimitedStorage",
    ],
      
    "background": {
	"scripts": [
	    "lib/dexie/dexie.js",
	    "lib/dexie/dexie-observable.js",
	    "modules/aeConst.js",
	    "modules/aeMsgBox.js",
	    "modules/aeClippingSubst.js",
	    "background.js"
	]
    },

    "content_scripts": [
	{
	    "matches": ["<all_urls>"],
	    "all_frames": true,
	    "js": ["content.js"]
	}
    ],

    "browser_action": {
	"default_icon": {
	    "16": "img/icon.svg",
            "32": "img/icon.svg"
	},

	"default_title": "Clippings"
    },

    "commands" : {
	"ae-clippings-paste-clipping": {
	    "suggested_key": {
		"default": "Alt+Shift+Y",
		"mac": "Command+Shift+Y"
	    },
	    "description": "Paste a clipping using its shortcut key"
	}
    }
}
